<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="goalkeeper.matheus.goalkeeper.PerfilGoleiro"
    tools:showIn="@layout/activity_perfil_goleiro"
    android:orientation="horizontal"
    android:weightSum="1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="496dp">
        <ImageView
            android:id="@+id/foto_perfil"
            android:background="@drawable/user"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:contentDescription="@string/imagem"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/txt_nome_perfil"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/foto_perfil" />
        <TextView
            android:id="@+id/txt_dataNasc_perfil"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_nome_perfil"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/foto_perfil" />
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/btn_partidas"
            android:layout_gravity="right"
            android:layout_alignTop="@+id/btn_relatorio"
            android:layout_centerHorizontal="true"
            android:text="Partidas" />
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/btn_relatorio"
            android:layout_marginTop="76dp"
            android:layout_below="@+id/foto_perfil"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="RelatÃ³rio" />
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/btn_editar_goleiro"
            android:layout_alignTop="@+id/btn_partidas"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="Editar" />
        <Button
            android:id="@+id/btn_voltar_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voltar"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:layout_marginTop="57dp"
            android:layout_below="@+id/btn_relatorio"
            android:layout_alignRight="@+id/btn_relatorio"
            android:layout_alignEnd="@+id/btn_relatorio" />
        <Button
            android:id="@+id/btn_deletar_goleiro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exluir"
            android:background="#ff0000"
            android:textColor="@color/white"
            android:layout_alignTop="@+id/btn_voltar_perfil"
            android:layout_toRightOf="@+id/foto_perfil"
            android:layout_toEndOf="@+id/foto_perfil" />
    </RelativeLayout>
</LinearLayout>