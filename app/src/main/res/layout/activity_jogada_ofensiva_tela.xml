<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="goalkeeper.matheus.goalkeeper.jogadas.JogadaOfensivaTela">

        <Spinner
            android:id="@+id/spinner_tempoJO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true" />

    <Spinner
        android:id="@+id/spinner_setorBolaFoiJO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>
    <Spinner
        android:id="@+id/spinner_primBola"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>
    <Spinner
        android:id="@+id/spinner_segBola"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>
    <CheckBox
        android:text="Houve Erro do Goleiro?"
        android:id="@+id/check_erroJO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/spinner_erroJO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"></Spinner>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:id="@+id/btn_calcelJO"
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="salvar"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:id="@+id/btn_salvarJO"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</LinearLayout>
