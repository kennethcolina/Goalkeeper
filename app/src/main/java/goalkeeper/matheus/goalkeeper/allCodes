personViewHolder.personDelete.setOnClickListener(new View.OnClickListener() {
                @Override
                public void onClick(View v) {
                    System.out.println(id + " - delete");

                    mDb.deletarGoleiro(id);

                    Intent refresh = new Intent(v.getContext(), MainActivity.class);
                    startActivity(refresh);//Start the same Activity
                    //mDb.teste();
                }
            });
            personViewHolder.personEdit.setOnClickListener(new View.OnClickListener() {
                @TargetApi(Build.VERSION_CODES.M)
                @Override
                public void onClick(View v) {
                    System.out.println(id + " - edit");
                    Intent alteraGoleiro = new Intent(v.getContext(), AlteraGoleiro.class);
                    alteraGoleiro.putExtra("ID_GOLEIRO", id);
                    startActivity(alteraGoleiro);
                }
            });


            // image buttons layout

            <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_alignParentRight="true"
                        >
                        <ImageButton
                            android:id="@+id/person_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_delete"/>
                        <ImageButton
                            android:id="@+id/person_edit"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/person_delete"
                            android:background="@drawable/ic_edit"/>
                    </RelativeLayout>

